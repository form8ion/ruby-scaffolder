{
  "name": "@form8ion/ruby-scaffolder",
  "description": "opinionated scaffolder for Ruby projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/ruby-scaffolder",
  "bugs": "https://github.com/form8ion/ruby-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/ruby-scaffolder",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:publish": "publint",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "pregenerate:md": "run-s build",
    "generate:md": "remark . --output",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "run-s build",
    "test:integration:base": "NODE_OPTIONS=\"--loader=testdouble --enable-source-maps\" DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "prepare": "husky install"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@travi/cli-messages": "^1.0.1",
    "execa": "^7.1.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "9.1.2",
    "@form8ion/commitlint-config": "1.0.50",
    "@form8ion/eslint-config": "5.0.32",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/remark-lint-preset": "5.0.9",
    "@travi/any": "2.1.8",
    "ban-sensitive-files": "1.9.19",
    "bdd-stdin": "0.2.0",
    "c8": "7.13.0",
    "chai": "4.3.7",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "8.0.3",
    "jest-when": "3.5.2",
    "mock-fs": "5.2.0",
    "npm-run-all": "4.1.5",
    "publint": "0.1.12",
    "remark-cli": "11.0.0",
    "rimraf": "5.0.1",
    "rollup": "3.23.0",
    "rollup-plugin-auto-external": "2.0.0",
    "testdouble": "3.18.0",
    "vitest": "0.31.1"
  }
}
