{
  "name": "@form8ion/ruby-scaffolder",
  "description": "opinionated scaffolder for Ruby projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "form8ion/ruby-scaffolder",
  "bugs": "https://github.com/form8ion/ruby-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/ruby-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha src/**/*-test.js",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/register": "7.18.9",
    "@form8ion/babel-preset": "1.6.99",
    "@form8ion/commitlint-config": "1.0.43",
    "@form8ion/eslint-config": "5.0.23",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "2.0.3",
    "@form8ion/remark-lint-preset": "4.0.2",
    "@travi/any": "2.1.6",
    "ban-sensitive-files": "1.9.18",
    "bdd-stdin": "0.2.0",
    "chai": "4.3.7",
    "codecov": "3.8.3",
    "@cucumber/cucumber": "8.10.0",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "mock-fs": "5.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "11.0.0",
    "rimraf": "4.1.1",
    "rollup": "3.10.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "15.0.1"
  },
  "dependencies": {
    "@travi/cli-messages": "^1.0.1",
    "execa": "^5.0.0"
  }
}
